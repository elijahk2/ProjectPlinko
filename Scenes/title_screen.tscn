resource_name = "titlescreen"
script/source = "extends Control

var cursor_y = 1

@onready var cursor: Sprite2D = $Cursor
@onready var audio_stream_player: AudioStreamPlayer = $AudioStreamPlayer
@onready var cursor_move_sfx: AudioStreamPlayer = $CursorMoveSFX

func _on_StartButton_pressed():
	Globals.play_title_start_sfx()
	get_tree().change_scene_to_file(\"res://Scenes/modifier_choice.tscn\")
	pass

func _on_QuitButton_pressed():
	get_tree().quit()
	pass

func _process(_delta):
	if cursor_y == 1:
		cursor.position = Vector2(326,431) #Hardcoded positions to display cursor at.
	else:
		cursor.position = Vector2(289,536) # \" \"
		
	if Input.is_action_pressed(\"push\"):
		if cursor_y == 1:
			Globals.play_cursor_move_sfx()
			get_tree().change_scene_to_file(\"res://Scenes/modifier_choice.tscn\")
		else:
			get_tree().quit()
	elif Input.is_action_just_pressed(\"down\") and cursor_y == 1:
		cursor_y += 1
		Globals.play_cursor_move_sfx()
	elif Input.is_action_just_pressed(\"up\") and cursor_y == 2:
		cursor_y -= 1
		Globals.play_cursor_move_sfx()
"

